{
    "compilerOptions": {
        "target": "es6",
        "declaration":true,
        "module": "commonjs",
        "lib": ["es6"],
        "outDir": "dist",
        "rootDir": "src",
        "strict": true,
        "noImplicitAny": true,
        "esModuleInterop": true,
        "resolveJsonModule": true,
        "skipLibCheck": true,
        "forceConsistentCasingInFileNames": true
    },
    "include": ["src"],
    "exclude": ["node_modules", "**/__tests__/*", "dist"]
}
